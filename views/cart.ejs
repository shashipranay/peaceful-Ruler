<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart | Organic Marketplace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/dashboard/imgs/ordernow.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background: rgba(0, 0, 0, 0.85) !important;
            backdrop-filter: blur(10px);
            padding: 1rem;
            border-bottom: 2px solid #4CAF50;
        }

        .navbar-brand {
            font-weight: 700;
            color: #4CAF50 !important;
            font-size: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .nav-link {
            color: white !important;
            transition: all 0.3s ease;
            position: relative;
            padding: 0.5rem 1rem;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: #4CAF50;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            transition: width 0.3s ease;
        }

        .nav-link:hover::after {
            width: 80%;
        }

        .nav-link:hover {
            color: #4CAF50 !important;
            transform: translateY(-2px);
        }

        .page-title {
            color: white;
            text-align: center;
            margin: 2rem 0;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-size: 2.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .cart-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 2rem;
            margin: 2rem 0;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .cart-item {
            background: white;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border: 1px solid rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .cart-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border-color: #4CAF50;
        }

        .cart-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 5px;
            background: #4CAF50;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .cart-item:hover::before {
            opacity: 1;
        }

        .item-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 10px;
            border: 2px solid #4CAF50;
        }

        .item-details {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .item-info h4 {
            color: #333;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .item-price {
            color: #4CAF50;
            font-weight: 700;
            font-size: 1.2rem;
        }

        .item-quantity {
            background: rgba(76, 175, 80, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 5px;
            color: #333;
            font-weight: 500;
        }

        .item-total {
            font-weight: 700;
            color: #2196F3;
            font-size: 1.1rem;
        }

        .cart-actions {
            display: flex;
            gap: 1rem;
            margin-left: auto;
        }

        .action-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .update-btn {
            background: #4CAF50;
            color: white;
        }

        .remove-btn {
            background: #f44336;
            color: white;
        }

        .action-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }

        .cart-summary {
            background: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            padding: 2rem;
            color: white;
            margin-top: 2rem;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .grand-total {
            font-size: 1.5rem;
            font-weight: 700;
            color: #4CAF50;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 2px solid rgba(255, 255, 255, 0.2);
        }

        .checkout-btn {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 5px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            width: 100%;
            margin-top: 1rem;
            transition: all 0.3s ease;
        }

        .checkout-btn:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .empty-cart {
            text-align: center;
            padding: 3rem;
            color: white;
        }

        .empty-cart i {
            font-size: 5rem;
            color: #4CAF50;
            margin-bottom: 1rem;
        }

        .empty-cart h3 {
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .empty-cart .shop-now-btn {
            background: #4CAF50;
            color: white;
            padding: 0.8rem 2rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-top: 1rem;
            transition: all 0.3s ease;
        }

        .empty-cart .shop-now-btn:hover {
            background: #45a049;
            transform: translateY(-2px);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .animate-fade-in {
            animation: fadeIn 0.5s ease forwards;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top animate__animated animate__fadeInDown">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-leaf me-2"></i>Organic Marketplace
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/order">
                            <i class="fas fa-shopping-basket me-1"></i>Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container" style="margin-top: 100px;">
        <h1 class="page-title animate__animated animate__fadeIn">Your Shopping Cart</h1>
        
        <div class="row">
            <% if (!cart || Object.keys(cart).length === 0) { %>
                <div class="col-12">
                    <div class="empty-cart animate__animated animate__fadeIn">
                        <i class="fas fa-shopping-cart"></i>
                        <h3>Your cart is empty</h3>
                        <p>Looks like you haven't added any products to your cart yet.</p>
                        <a href="/order" class="shop-now-btn">
                            <i class="fas fa-shopping-basket me-2"></i>Shop Now
                        </a>
                    </div>
                </div>
            <% } else { %>
                <div class="col-lg-8">
                    <div class="cart-container animate__animated animate__fadeInUp">
                        <% Object.entries(cart).forEach(([productId, item]) => { %>
                            <div class="cart-item">
                                <div class="item-details">
                                    <img src="<%= item.image %>" alt="<%= item.name %>" class="item-image">
                                    <div class="item-info flex-grow-1">
                                        <h4><%= item.name %></h4>
                                        <p class="item-price">₹<%= item.price %> / kg</p>
                                        <span class="item-quantity">Quantity: <%= item.quantity %></span>
                                    </div>
                                    <div class="text-end">
                                        <p class="item-total">Total: ₹<%= item.price * item.quantity %></p>
                                        <div class="cart-actions">
                                            <button class="action-btn update-btn" onclick="updateQuantity('<%= productId %>')">
                                                <i class="fas fa-sync-alt me-1"></i>Update
                                            </button>
                                            <button class="action-btn remove-btn" onclick="removeItem('<%= productId %>')">
                                                <i class="fas fa-trash me-1"></i>Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="cart-summary animate__animated animate__fadeInRight">
                        <h3 class="mb-4">Order Summary</h3>
                        <div class="summary-item">
                            <span>Subtotal</span>
                            <span>₹<%= Object.values(cart).reduce((sum, item) => sum + (item.price * item.quantity), 0) %></span>
                        </div>
                        <div class="summary-item">
                            <span>Shipping</span>
                            <span>₹50</span>
                        </div>
                        <div class="summary-item">
                            <span>Tax (5%)</span>
                            <span>₹<%= Math.round(Object.values(cart).reduce((sum, item) => sum + (item.price * item.quantity), 0) * 0.05) %></span>
                        </div>
                        <div class="grand-total">
                            <span>Total</span>
                            <span>₹<%= 
                                Object.values(cart).reduce((sum, item) => sum + (item.price * item.quantity), 0) + 
                                50 + 
                                Math.round(Object.values(cart).reduce((sum, item) => sum + (item.price * item.quantity), 0) * 0.05)
                            %></span>
                        </div>
                        <button class="checkout-btn" onclick="proceedToCheckout()">
                            <i class="fas fa-lock me-2"></i>Proceed to Checkout
                        </button>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let cart = <%- JSON.stringify(cart) %>;

        function updateQuantity(productId) {
            const newQuantity = prompt("Enter new quantity:", cart[productId].quantity);
            if (newQuantity === null) return; // User cancelled

            const quantity = parseInt(newQuantity);
            if (isNaN(quantity) || quantity < 0) {
                alert("Please enter a valid quantity");
                return;
            }

            if (quantity === 0) {
                removeItem(productId);
                return;
            }

            cart[productId].quantity = quantity;
            updateCart();
        }

        function removeItem(productId) {
            if (confirm("Are you sure you want to remove this item?")) {
                delete cart[productId];
                updateCart();
            }
        }

        function updateCart() {
            fetch('/cart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(cart)
            })
            .then(response => response.json())
            .then(() => {
                // Reload the page to show updated cart
                window.location.reload();
            })
            .catch(error => {
                console.error("Error updating cart:", error);
                alert("Failed to update cart. Please try again.");
            });
        }

        function proceedToCheckout() {
            // Calculate total amount
            const subtotal = Object.values(cart).reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const shipping = 50;
            const tax = Math.round(subtotal * 0.05);
            const total = subtotal + shipping + tax;

            // Create order summary
            const orderSummary = {
                items: cart,
                subtotal: subtotal,
                shipping: shipping,
                tax: tax,
                total: total
            };

            // Store order summary in session storage
            sessionStorage.setItem('orderSummary', JSON.stringify(orderSummary));

            // Redirect to checkout page
            window.location.href = '/checkout';
        }

        // Add animation to cart items on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                        observer.unobserve(entry.target);
                    }
                });
            });

            document.querySelectorAll('.cart-item').forEach(item => {
                observer.observe(item);
            });
        });
    </script>
</body>
</html> 